{
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npx tailwindcss -i ./src/styles/styles.css -o ./dist/styles.css --watch\" \"netlify dev\"",
    "build": "npm run build:css && cp -r src dist/src",
    "watch:css": "npx tailwindcss -i ./src/styles/styles.css -o ./dist/styles.css --watch",
    "build:css": "npx tailwindcss -i ./src/styles/styles.css -o ./dist/styles.css --minify",
    "start": "netlify dev"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "tailwindcss": "^3.4.17"
  }
}
